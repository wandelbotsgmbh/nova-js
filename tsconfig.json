{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2021", "DOM"],
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    // Enables "Go to Definition" when dist and src are distributed together
    "declarationMap": true,
    // https://github.com/microsoft/TypeScript/issues/45995
    "useDefineForClassFields": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
